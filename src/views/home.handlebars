<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Lista de Productos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <div class="container">
        <h1 class="my-4 text-center">Lista de Productos</h1>

        <hr class="hr" />

        <div class="row">
            {{#each products}}
            <div class="col-md-4 mb-4">
                <div class="card">
                    {{#if this.thumbnail}}
                    <img src="{{this.thumbnail}}" class="card-img-top" alt="{{this.title}}">
                    {{/if}}
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <p class="card-text"><strong>Precio: </strong>${{this.price}}</p>
                        <p class="card-text"><strong>Stock: </strong>{{this.stock}}</p>
                        <p class="card-text"><strong>Categor√≠a: </strong>{{this.category}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</body>

</html>